<Window x:Class="ESMLoop.Windows.Questioning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Fragebogen" Height="980" Width="1100"
        ResizeMode="NoResize"
        Icon="/Windows/KitIcon.ico"
        WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <!--900x1000-->

    <ScrollViewer HorizontalScrollBarVisibility="Auto">
    <Grid>
        <StackPanel Orientation="Vertical" Background="#FF2C2D2D">
            <!--Information-->
            <StackPanel>
                    <TextBlock
                    Margin="20,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    TextAlignment="Left"
                    FontSize="40"
                    FontWeight="SemiBold" Foreground="White"><Run Language="de-de" Text="Overview"/></TextBlock>
                </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel HorizontalAlignment ="Center" Orientation="Vertical" Width="500">
                    <StackPanel HorizontalAlignment ="Center" VerticalAlignment="Center" Width="460" Margin="0,10,0,20" Background="#FF3A3A3A">
                        <TextBlock
                                Width="300" 
                                Height="35"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                FontSize="24"
                                FontWeight="Normal" 
                                Text="Collected Labels" Foreground="White">
                        </TextBlock>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock
                                    Width="200" 
                                    Height="30"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="Today"
                                    TextAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Regular" Foreground="White">
                                </TextBlock>
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0" >
                                    <TextBlock x:Name="LabelsToday"
                                        Width="70" 
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        TextAlignment="Center"
                                        FontSize="50"
                                        FontWeight="SemiBold" Foreground="White"><Run Language="de-de" Text="X"/>
                                    </TextBlock>
                                    <TextBlock
                                        Width="120" 
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text=" / min. 5"
                                        TextAlignment="Left"
                                        FontSize="30"
                                        FontWeight="Regular" Foreground="White">
                                    </TextBlock>

                                </StackPanel>
                            </StackPanel>
                            <StackPanel>
                                <StackPanel>
                                    <TextBlock
                                        Width="200" 
                                        Height="30"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="Total"
                                        TextAlignment="Center"
                                        FontSize="18"
                                        FontWeight="Regular" Foreground="White">
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0">
                                    <TextBlock x:Name="LabelsTotal"
                                        Width="100" 
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        TextAlignment="Center"
                                        FontSize="50"
                                        FontWeight="SemiBold" Foreground="White"><Run Language="de-de" Text="X"/></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel HorizontalAlignment ="Center" Orientation="Vertical" Width="500">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,20" Width="460" Background="#FF3A3A3A">
                        <StackPanel >
                            <TextBlock
                                Width="300" 
                                Height="35"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                FontSize="24"
                                FontWeight="Normal" 
                                Text="Collected Data" Foreground="White">
                            </TextBlock>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock
                                        Width="200" 
                                        Height="30"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="Today"
                                        TextAlignment="Center"
                                        FontSize="18"
                                        FontWeight="Regular" Foreground="White">
                                    </TextBlock>
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0">
                                        <TextBlock x:Name="DataToday"
                                            Width="220" 
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            TextAlignment="Center"
                                            FontSize="50"
                                            FontWeight="SemiBold" Foreground="White"><Run Language="de-de" Text="XXX"/><Run Text=" MB"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock
                                        Width="200" 
                                        Height="30"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="Total"
                                        TextAlignment="Center"
                                        FontSize="18"
                                        FontWeight="Regular" Foreground="White">
                                    </TextBlock>
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,0">
                                        <TextBlock x:Name="DataTotal"
                                            Width="220" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextAlignment="Center"
                                            FontSize="50"
                                            FontWeight="SemiBold" Foreground="White"><Run Language="de-de" Text="XXXX"/><Run Text=" "/><Run Language="de-de" Text="M"/><Run Text="B"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <!--FrageBogen-->
            <StackPanel  Background="#FF212121" Height="700">
                <StackPanel Orientation="Horizontal" Height="70" Margin="0,10,0,0">
                    <StackPanel Width="500" VerticalAlignment="Center">
                        <TextBlock
                        Width="480"
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        Text="Questionnaire"
                        TextAlignment="Left"
                        FontSize="40"
                        FontWeight="SemiBold" Foreground="White">
                        </TextBlock>
                    </StackPanel>
                    
                </StackPanel>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" >
                    <TextBlock x:Name="Text_Step1"
                            Width="310"
                            Margin="0,10,0,10"
                            VerticalAlignment="Center"
                            Text="Step 1"
                            Background="#FF434546"
                            TextAlignment="Center"
                            FontSize="18"
                            FontWeight="UltraLight" Foreground="White">
                    </TextBlock>
                    <TextBlock x:Name="Text_Step2"
                            Width="310"
                            Margin="10,10,0,10"
                            VerticalAlignment="Center"
                            Text="Step 2"
                            Background="#FF434546"
                            TextAlignment="Center"
                            FontSize="18"
                            FontWeight="UltraLight" Foreground="White">
                    </TextBlock>
                    <TextBlock x:Name="Text_Step3"
                            Width="310"
                            Margin="10,10,0,10"
                            VerticalAlignment="Center"
                            Text="Step 2"
                            Background="#FF434546"
                            TextAlignment="Center"
                            FontSize="18"
                            FontWeight="UltraLight" Foreground="White">
                    </TextBlock>
                </StackPanel>
                <TextBlock
                        Width="800" 
                        Height="30"
                        Margin="20,10,0,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="Please reflect about the just interrupted task."
                        TextAlignment="Left"
                        FontSize="18"
                        FontWeight="Light" Foreground="White">
                </TextBlock>
                <!--Input Question Block-->
                <ContentControl x:Name="contentControl"/>
                <!--Buttons-->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,0" Height="40" Width="1000">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="0,0,0,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <StackPanel HorizontalAlignment="Left" Margin="20,0,0,0"  Width="480">
                        <Button 
                            x:Name="ButtonCancel"                                    
                            Content="Cancle"
                            HorizontalAlignment="Left"
                            Width="190"                   
                            Height="40"                  
                            Click="ButtonCancel_Click"                                                                       
                            FontSize="14"                               
                            FontWeight="Regular" BorderBrush="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" Margin="0,0,0,0" Width="480">
                        <Button 
                            x:Name="ButtonNext"                                    
                            Content="Continue"                                     
                            Width="190"                   
                            Height="40"
                            HorizontalAlignment="Right"
                            Click="ButtonNext_Click"                                                                      
                            FontSize="14"                               
                            FontWeight="DemiBold" BorderBrush="{x:Null}" Foreground="White" Background="#FF2F75D4" ClipToBounds="True">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
    </ScrollViewer>

</Window>
