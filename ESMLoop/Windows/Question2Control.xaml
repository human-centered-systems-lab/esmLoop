<UserControl x:Class="ESMLoop.Windows.Question2Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESMLoop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel Margin="20,0,20,0" HorizontalAlignment="Center" Background="#FF3A3A3A">
            <local:LikertControl
                    x:Name="Nasa0"
                    Question="Question 1"
                    Disagree="Low"
                    Agree="High"
                    Margin="30,20,0,0"
                    HorizontalAlignment="Center">
            </local:LikertControl>
            <local:LikertControl
                    x:Name="Nasa1"
                    Question="Question 2"
                    Disagree="Low"
                    Agree="High"
                    Margin="30,20,0,0"
                    HorizontalAlignment="Center">
            </local:LikertControl>
            <local:LikertControl
                    x:Name="Nasa2"
                    Question="Question 3"
                    Disagree="Low"
                    Agree="High"
                    Margin="30,20,0,0"
                    HorizontalAlignment="Center">
            </local:LikertControl>
            <local:LikertControl
                    x:Name="Nasa3"
                    Question="Question 4"
                    Disagree="Low"
                    Agree="High"
                    Margin="30,20,0,0"
                    HorizontalAlignment="Center">
            </local:LikertControl>
            <local:LikertControl
                    x:Name="Nasa4"
                    Question="Question 5"
                    Margin="30,20,0,0"
                    Disagree="Low"
                    Agree="High"
                    HorizontalAlignment="Center">
            </local:LikertControl>
            <local:LikertControl
                    x:Name="Nasa5"
                    Question="Question 6"
                    Margin="30,20,0,10"
                    Disagree="Low"
                    Agree="High"
                    HorizontalAlignment="Center">
            </local:LikertControl>
        </StackPanel>

    </Grid>
</UserControl>
